<Window x:Class="eStation_PTL_Demo.ClientCertificateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eStation_PTL_Demo"
        xmlns:vm="clr-namespace:eStation_PTL_Demo.ViewModel"
        xmlns:h="clr-namespace:eStation_PTL_Demo.Helper"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" h:DialogHelper.DialogResult="{Binding DialogResult}"
        Title="ClientCertificate" Height="156" Width="400">
    <Window.DataContext>
        <vm:ClientCertificateViewModel />
    </Window.DataContext>
    <Grid h:GridHelper.LineBrush="Black" h:GridHelper.ShowBorder="True" h:GridHelper.LineThickness="0.5">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>       
        <TextBlock Grid.Row="0" Grid.Column="0" Text="PfxCertificate"/>
        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" Text="{Binding PfxPath}"/>
        <Button Grid.Row="0" Grid.Column="2" Content="Browse" Command="{Binding CmdPfxBrowse}"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="PfxPassword"/>
        <PasswordBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" h:PwdBoxHelper.Attach="True" h:PwdBoxHelper.Password="{Binding PfxPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="CrtCertificate"/>
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1" Text="{Binding CrtPath}"/>
        <Button Grid.Row="2" Grid.Column="2" Content="Browse" Command="{Binding CmdCrtBrowse}"/>
        <Button Grid.Row="3" Grid.Column="0" Content="Cancel" Command="{Binding CmdCancel}"/>
        <Button Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Content="Certificate" Command="{Binding CmdCertificate}"/>
    </Grid>
</Window>
