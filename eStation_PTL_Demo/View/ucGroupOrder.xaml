<UserControl x:Class="eStation_PTL_Demo.View.ucGroupOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:eStation_PTL_Demo"
             xmlns:h="clr-namespace:eStation_PTL_Demo.Helper"
             xmlns:v="clr-namespace:eStation_PTL_Demo.View"
             xmlns:vm="clr-namespace:eStation_PTL_Demo.ViewModel"
             mc:Ignorable="d" >
    <UserControl.DataContext>
        <vm:GroupOrderViewModel/>
    </UserControl.DataContext>
    <GroupBox Header="群控亮灯">
        <Grid h:GridHelper.LineBrush="Black" h:GridHelper.ShowBorder="True" h:GridHelper.LineThickness="0.5">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="灯色"/>
            <CheckBox Grid.Row="0" Grid.Column="1" Content="R" IsChecked="{Binding Group.R, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <CheckBox Grid.Row="0" Grid.Column="2" Content="G" IsChecked="{Binding Group.G, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <CheckBox Grid.Row="0" Grid.Column="3" Content="B" IsChecked="{Binding Group.B, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Grid.Row="1" Grid.Column="0" Text="蜂鸣"/>
            <CheckBox Grid.Row="1" Grid.Column="1" Content="是" IsChecked="{Binding Group.Beep, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  />
            <TextBlock Grid.Row="1" Grid.Column="2" Text="闪烁"/>
            <CheckBox Grid.Row="1" Grid.Column="3" Content="是" IsChecked="{Binding Group.Blink, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  />
            <TextBlock Grid.Row="2" Grid.Column="0" Text="次数"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Group.Time, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxLength="4" MaxLines="1" InputScope="Number"/>
            <TextBlock Grid.Row="2" Grid.Column="2" Text="分组"/>
            <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding Group.Bind, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxLength="4" MaxLines="1" InputScope="Number"/>
            <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" x:Name="btnGroupStop" Command="{Binding CmdGroupStop}" IsEnabled="{Binding IsConnect}" Content="停止"/>
            <Button Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" x:Name="btnGroupSend" Command="{Binding CmdGroupSend}" IsEnabled="{Binding IsConnect}" Content="发送"/>
        </Grid>
    </GroupBox>
</UserControl>
